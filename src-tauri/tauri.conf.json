{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "windgets",
  "version": "0.1.0",
  "identifier": "com.benmi.windgets",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "x":0,
        "y": 1600,
        "title": "windgets",
        "width": 400,
        "height": 180,
        "decorations": false,
        "focusable": false,
        "resizable": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnBottom": true
      },
      {
        "label": "settings",
        "url": "/settings",
        "width": 400,
        "height": 180,
        "resizable": true,
        "visible": false
      }

    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
